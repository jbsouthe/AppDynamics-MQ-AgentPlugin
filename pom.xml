        <dependency>
            <groupId>instrumentation-sdk</groupId>
            <artifactId>instrumentation-sdk</artifactId>
            <version>1.0</version>
            <scope>test</scope>
        </dependency>
      <!-- https://mvnrepository.com/artifact/com.ibm.mq/com.ibm.mq.allclient -->
